<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/cardview_light_background"
    android:layout_marginTop="5dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    app:cardCornerRadius="5dp">

    <ImageView
        android:id="@+id/imageFoku"
        android:layout_width="100sp"
        android:layout_height="match_parent"
        android:contentDescription="@string/default_description"
        android:src="@drawable/android_icon"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="110dp"
        android:layout_marginStart="110dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/rlFields"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nameFoku"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:padding="8dp"
                android:text="@string/nameFoku"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#808184" />

            <TextView
                android:id="@+id/descriptionFoku"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@id/nameFoku"
                android:padding="8dp"
                android:text="@string/descriptionFoku"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#808184" />

            <TextView
                android:id="@+id/createdAtFoku"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@id/descriptionFoku"
                android:padding="8dp"
                android:text="@string/createdAtFoku"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#808184" />

        </RelativeLayout>

        <ImageButton
            android:id="@+id/ibFokuDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:background="@android:color/transparent"
            android:contentDescription="@string/default_description"
            android:padding="@dimen/activity_vertical_margin"
            android:src="@drawable/ic_more_vert_black_24dp" />

    </RelativeLayout>

</android.support.v7.widget.CardView>